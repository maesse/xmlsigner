<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable TRACE for DSS -->
    <logger name="eu.europa.esig.dss" level="TRACE" />

    <logger name="eu.europa.esig.dss.xades.signature" level="TRACE" />

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>